generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  queued
  parsing
  calculating
  analyzing
  topic_generating
  generating_charts
  completed
  failed
}

model AnalysisTask {
  id             String     @id @default(uuid())
  status         TaskStatus @default(queued)
  progress       Int        @default(0)
  currentStep    String?
  error          String?

  fileId         String
  fileName       String
  fileSize       Int
  fileUrl        String?    // Vercel Blob URL 或本地文件路径
  fileContent    String?    // Base64 编码的文件内容（解决 Blob URL 过期问题）
  columnMapping  String

  aiProvider     String   @default("claude")
  aiConfig       String?  // AI 配置（JSON 字符串）
  generateTopics Boolean  @default(true)

  resultData     String?

  reportPath     String?
  excelPath      String?
  chartPaths     String?

  recordCount    Int?
  viralCount     Int?

  accountName    String?   // 账号名称

  // 分析步骤分步执行字段
  analysisStep         Int?     @default(0)  // 当前分析步骤 (0=解析, 1=账号, 2=月度, 3=爆发期, 4=爆款主, 5=方法论, 6=完成)
  analysisData         String?  // 临时存储中间数据（JSON）

  // 选题生成分步执行字段
  topicStep           String?  // 'outline' | 'details' | 'complete'
  topicOutlineData    String?  // 临时存储大纲数据（JSON）
  topicDetailIndex    Int?     // 当前详情批次索引 (0-2)
  topicBatchSize      Int      @default(10)  // 每批次数量

  // 防并发锁字段（Vercel Serverless 环境需要数据库级别的锁）
  processing          Boolean? @default(false)  // 标记任务是否正在处理中
  processingLockedAt  DateTime? // 锁定时间戳（用于超时检测）

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  completedAt    DateTime?

  logs           AnalysisLog[]

  @@index([status])
  @@index([createdAt])
  @@index([completedAt])
  @@map("analysis_tasks")
}

// 分析日志模型 - 用于存储分析过程中的日志
model AnalysisLog {
  id        String   @id @default(uuid())
  taskId    String
  timestamp DateTime @default(now())
  level     String   // 'info' | 'error' | 'warn'
  phase     String   // 'parse' | 'calculate' | 'ai' | 'report' | 'system'
  step      String
  status    String   // 'start' | 'progress' | 'success' | 'error'
  details   String?  // JSON 字符串，包含 input/output/error
  duration  Int?     // 持续时间（毫秒）

  task  AnalysisTask @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([timestamp])
  @@map("analysis_logs")
}
